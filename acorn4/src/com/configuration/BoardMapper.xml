<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardMapper">
	<insert id="boardReply" parameterType="Board">
		insert into board(num,author,title,content,repRoot,repStep,repIndent)
		values(board_seq.nextval,#{author},#{title},#{content},#{repRoot},#{repStep}+1,#{repIndent}+1)
	</insert>
	<update id="makeReply" parameterType="Board">
		update board set repStep=repStep+1
		where repRoot=#{repRoot} and repStep>#{repStep}
	</update>
	<select id="boardReplyUI" parameterType="String" resultType="Board">
		select num,author,title,content,writeday,readcnt,repRoot,repStep,repIndent,secret
		from board
		where num=#{_num}
	</select>
	<select id="boardRetrieve" parameterType="String" resultType="Board">
		select num,author,title,content,writeday,readcnt,repRoot,repStep,repIndent,secret
		from board
		where num=#{_num}
	</select>
	<select id="boardlist" resultType="Board">
		select num,title,author,content,writeday,readcnt,repRoot,repStep,repIndent,secret
		from board
		order by repRoot desc, repStep asc
	</select>
	<insert id="boardWrite" parameterType="Board">
		insert into board(num,author,title,content,repRoot,repStep,repIndent,secret)
		values(board_seq.nextval,#{author},#{title},#{content},board_seq.currval,0,0,#{secret})
	</insert>
	<update id="boardCnt" parameterType="String">
		update board set readcnt = readcnt+1
		where num=#{_num}
	</update>
	<update id="boardUpdate" parameterType="Board">
		update board set title=#{title}, author=#{author}, content=#{content}
		where num=#{num}
	</update>
	<delete id="boardDelete" parameterType="String">
		delete from board where num=#{_num}
	</delete>
	<select id="boardSearch" parameterType="Board" resultType="Board">
		select num, author,title,content,writeday,readcnt ,secret
		from board
		<where>
			<if test="title!=null">
				title like  '%'|| #{title} ||'%'
			</if>
			<if test="author!=null">
				author like  '%'|| #{author} ||'%'
			</if>
		</where>
	</select>
</mapper>